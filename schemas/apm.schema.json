{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "APM Package Manifest",
  "type": "object",
  "required": ["name", "version", "description", "author"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9._-]+$"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.-]+)?$"
    },
    "description": {
      "type": "string",
      "maxLength": 500
    },
    "author": {
      "type": "string"
    },
    "license": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 30
      },
      "maxItems": 20
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "apm": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "mcp": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "scripts": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "additionalProperties": true
}
