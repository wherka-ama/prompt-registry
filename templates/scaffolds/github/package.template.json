  "files": [
    "agents",
    "collections",
    "instructions",
    "prompts",
    "deployment-manifest.yml",
    "*.zip"
  ],
  "dependencies": {
    "archiver": "^7.0.1",
    "js-yaml": "^4.1.0",
    "semver": "^7.6.3",
    "yauzl": "^3.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
