{
  "name": "{{packageName}}",
  "version": "1.0.0",
  "description": "Prompt collection for GitHub Copilot",
  "scripts": {
    "validate": "node scripts/validate-collections.js",
    "validate:verbose": "node scripts/validate-collections.js --verbose",
    "build-collection-bundle": "node scripts/build-collection-bundle.js",
    "publish-collections": "node scripts/publish-collections.js",
    "list-collections": "node scripts/list-collections.js",
    "compute-collection-version": "node scripts/compute-collection-version.js",
    "install-hooks": "git config core.hooksPath .githooks",
