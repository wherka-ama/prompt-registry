{
  "name": "prompt-registry",
  "displayName": "Prompt Registry",
  "description": "Prompt Registry Framework - AI prompt management framework for VSCode and its forks",
  "version": "0.0.1",
  "publisher": "AmadeusITGroup",
  "author": {
    "name": "Amadeus IT Group",
    "email": "opensource@amadeus.com"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/AmadeusITGroup/prompt-registry.git"
  },
  "bugs": {
    "url": "https://github.com/AmadeusITGroup/prompt-registry/issues"
  },
  "homepage": "https://github.com/AmadeusITGroup/prompt-registry#readme",
  "keywords": [
    "ai",
    "assistant",
    "framework",
    "llm",
    "productivity",
    "coding",
    "automation"
  ],
  "categories": [
    "Other",
    "Machine Learning",
    "Education"
  ],
  "engines": {
    "vscode": "^1.99.3"
  },
  "main": "./dist/extension.js",
  "icon": "icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "promptregistry.selectVersion",
        "title": "Select Version to Install",
        "category": "Prompt Registry"
      },
      {
        "command": "promptregistry.checkUpdates",
        "title": "Check for Updates",
        "category": "Prompt Registry"
      },
      {
        "command": "promptregistry.update",
        "title": "Update to Latest Version",
        "category": "Prompt Registry"
      },
      {
        "command": "promptregistry.uninstall",
        "title": "Uninstall Prompt Registry Components",
        "category": "Prompt Registry"
      },
      {
        "command": "promptregistry.showVersion",
        "title": "Show Version Information",
        "category": "Prompt Registry"
      },
      {
        "command": "promptregistry.showHelp",
        "title": "Show Help Documentation",
        "category": "Prompt Registry"
      },
      {
        "command": "promptregistry.validateAccess",
        "title": "Validate Repository Access",
        "category": "Prompt Registry"
      },
      {
        "command": "promptregistry.uninstallAll",
        "title": "Uninstall All Prompt Registry Components",
        "category": "Prompt Registry"
      },
      {
        "command": "promptregistry.enhancedInstall",
        "title": "Install Prompt Registry Components",
        "category": "Prompt Registry"
      },
      {
        "command": "promptregistry.enhancedUninstall",
        "title": "Uninstall Prompt Registry Components",
        "category": "Prompt Registry"
      },
      {
        "command": "promptRegistry.scaffoldProject",
        "title": "Scaffold Awesome-Copilot Project",
        "category": "Prompt Registry"
      },
      {
        "command": "promptRegistry.validateCollections",
        "title": "Validate Collections",
        "category": "Prompt Registry"
      },
      {
        "command": "promptRegistry.validateCollectionsWithRefs",
        "title": "Validate Collections (Check File References)",
        "category": "Prompt Registry"
      },
      {
        "command": "promptRegistry.listCollections",
        "title": "List All Collections",
        "category": "Prompt Registry"
      },
      {
        "command": "promptRegistry.createCollection",
        "title": "Create New Collection",
        "category": "Prompt Registry"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "promptRegistry",
          "title": "Prompt Registry",
          "icon": "$(package)"
        }
      ]
    },
    "views": {
      "promptRegistry": [
        {
          "id": "promptregistry.marketplace",
          "name": "Marketplace",
          "type": "webview",
          "icon": "$(extensions)",
          "contextualTitle": "Prompt Marketplace"
        },
        {
          "id": "promptRegistryExplorer",
          "name": "Registry Explorer",
          "icon": "$(list-tree)",
          "contextualTitle": "Prompt Registry"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "promptregistry.selectVersion"
        },
        {
          "command": "promptregistry.checkUpdates"
        },
        {
          "command": "promptregistry.update"
        },
        {
          "command": "promptregistry.uninstall"
        },
        {
          "command": "promptregistry.showVersion"
        },
        {
          "command": "promptregistry.showHelp"
        },
        {
          "command": "promptregistry.validateAccess"
        },
        {
          "command": "promptregistry.uninstallAll"
        }
      ],
      "view/item/context": [
        {
          "command": "promptRegistry.activateProfile",
          "when": "view == promptRegistryExplorer && viewItem == profile",
          "group": "promptRegistry@1"
        },
        {
          "command": "promptRegistry.editProfile",
          "when": "view == promptRegistryExplorer && viewItem == profile",
          "group": "promptRegistry@2"
        },
        {
          "command": "promptRegistry.exportProfile",
          "when": "view == promptRegistryExplorer && viewItem == profile",
          "group": "promptRegistry@3"
        },
        {
          "command": "promptRegistry.deleteProfile",
          "when": "view == promptRegistryExplorer && viewItem == profile",
          "group": "promptRegistry@4"
        }
      ]
    },
    "configuration": {
      "title": "Prompt Registry",
      "properties": {
        "promptregistry.autoCheckUpdates": {
          "type": "boolean",
          "default": true,
          "description": "Automatically check for updates on extension activation"
        },
        "promptregistry.installationScope": {
          "type": "string",
          "enum": [
            "user",
            "workspace",
            "project"
          ],
          "default": "user",
          "description": "Default installation scope for Prompt Registry components"
        },
        "promptregistry.enableLogging": {
          "type": "boolean",
          "default": true,
          "description": "Enable detailed logging for debugging purposes"
        },
        "promptregistry.githubApiUrl": {
          "type": "string",
          "default": "https://api.github.com",
          "description": "GitHub API URL for fetching releases"
        },
        "promptregistry.repositoryOwner": {
          "type": "string",
          "default": "AmadeusITGroup",
          "description": "GitHub repository owner"
        },
        "promptregistry.repositoryName": {
          "type": "string",
          "default": "prompt-registry",
          "description": "GitHub repository name"
        },
        "promptregistry.githubToken": {
          "type": "string",
          "default": "",
          "description": "GitHub personal access token for private repositories (generate with 'gh auth token')"
        },
        "promptregistry.usePrivateRepository": {
          "type": "boolean",
          "default": false,
          "description": "Enable access to private GitHub repositories using authentication"
        },
        "promptregistry.useGitHubCli": {
          "type": "boolean",
          "default": false,
          "description": "Use GitHub CLI (gh) for automatic token generation instead of manual token"
        },
        "promptregistry.defaultVersion": {
          "type": "string",
          "default": "latest",
          "description": "Default version to install (use 'latest' for latest release or specific version like 'v1.0.0')"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "package:vsix": "vsce package",
    "compile-tests": "tsc -p tsconfig.test.json && node scripts/copy-test-fixtures.js",
    "watch-tests": "tsc -p tsconfig.test.json -w",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "npm run test:all",
    "test:unit": "npx mocha --ui tdd --require ./test/mocha.setup.js --require ./test/unit.setup.js 'test-dist/test/{adapters,services,utils}/**/*.test.js' --timeout 5000",
    "test:integration": "npm run compile-tests && node ./test/runExtensionTests.js",
    "test:all": "npm run compile-tests && npm run test:unit && npm run test:integration",
    "test:coverage": "npm run compile-tests && c8 npm run test:all",
    "test:coverage:report": "c8 report --reporter=html --reporter=text --reporter=json",
    "test:coverage:unit": "npm run compile-tests && c8 --reporter=html --reporter=text mocha --ui tdd --require ./test/mocha.setup.js --require ./test/unit.setup.js 'test-dist/test/{adapters,services,utils}/**/*.test.js' --timeout 5000",
    "test:coverage:integration": "npm run compile-tests && c8 --reporter=html --reporter=text npm run test:integration",
    "coverage:clean": "rimraf coverage .nyc_output .c8_output",
    "ignore:status": "node scripts/package-helpers.js status",
    "ignore:dev": "node scripts/package-helpers.js dev",
    "ignore:prod": "node scripts/package-helpers.js prod",
    "ignore:restore": "node scripts/package-helpers.js restore",
    "package:prepare": "node scripts/package-helpers.js prod && npm run compile",
    "package:cleanup": "node scripts/package-helpers.js dev",
    "package:full": "npm run package:prepare && npm run package:vsix && npm run package:cleanup",
    "package:production": "npm run package:prepare && npm run package:vsix && npm run package:cleanup && echo \"ðŸ“¦ Production package created with optimized size\"",
    "dev:setup": "npm run ignore:dev && echo \"ðŸ”§ Development mode activated - Copilot friendly\"",
    "dev:package-test": "npm run package:prepare && echo \"ðŸ“‹ Switched to production mode - check file exclusions\" && npm run ignore:status",
    "version:update": "./scripts/update-version.sh",
    "version:bump:major": "npm version major --no-git-tag-version && npm run version:update",
    "version:bump:minor": "npm version minor --no-git-tag-version && npm run version:update",
    "version:bump:patch": "npm version patch --no-git-tag-version && npm run version:update"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/adm-zip": "^0.5.7",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^16.18.126",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.99.3",
    "@types/yauzl": "^2.10.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.15.0",
    "adm-zip": "^0.5.16",
    "c8": "^10.1.3",
    "eslint": "^8.28.0",
    "fs-extra": "^11.3.2",
    "mocha": "^10.1.0",
    "nock": "^14.0.10",
    "nyc": "^17.1.0",
    "rimraf": "^6.0.1",
    "sinon": "^21.0.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.4",
    "webpack": "^5.76.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@types/archiver": "^7.0.0",
    "@types/glob": "^8.1.0",
    "archiver": "^7.0.1",
    "axios": "^1.6.0",
    "glob": "^11.0.3",
    "js-yaml": "^4.1.0",
    "semver": "^7.5.4",
    "yauzl": "^2.10.0"
  },
  "extensionDependencies": [],
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.d.ts",
      "src/**/*.test.ts",
      "**/*.d.ts",
      "test/**/*",
      "coverage/**/*",
      "dist/**/*",
      "out/**/*",
      "node_modules/**/*"
    ],
    "reporter": [
      "text",
      "html",
      "json",
      "lcov"
    ],
    "report-dir": "coverage",
    "temp-dir": ".nyc_output"
  }
}
